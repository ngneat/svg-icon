{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "@ngneat/svg-icon": ["projects/ngneat/svg-icon/src/public-api.ts"],
      "@app/svg/*": ["src/app/svg/*"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "disableTypeScriptVersionCheck": true
  }
}
